@import 'jeet'
@import 'nib'
@import url(http://fonts.googleapis.com/css?family=Dosis:200,300,400,500,600,700,800);
@import url(/css/janus.css)

mobile = 600px

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

// edit()
global-reset()
main_color = #F4F3F3
content_font = 'Dosis', sans-serif
head_color = #B56464


body
  center(800px)
  background(main_color)
  font-family content_font
  +below(600px)
  	// background red

ul
	// font-family Helvetica, Arial, sans-serif

header
	padding 2rem 0
	margin-bottom 4rem

.global_head
	font-size 3rem
	// padding 6rem 3rem
	text-align right
	display inline-block
	width 80%
	float right
	color #B56464

a
	text-decoration none

.navigation li
			padding-left 2rem
	
.post_list li
	padding 2rem 0
	border-bottom 1px solid #ccc
	&:last-child
		border-bottom none

.meta_trio
	col(1/4, gutter:0)
	text-transform: uppercase;
		
	
.post_title
	font-size 1.2rem
	transition .4s all
	color #B2ACAC
	font-weight 600
	// text-shadow 1px 1px 4px #5C5D5E
	&:hover
		color #353535
		// font-size 1.3rem
		letter-spacing .1rem


.post_header
	color #353535
	letter-spacing .1rem
	font-size 2rem
	padding: .5rem 0 5rem 0;
	
.blogpost_wrap
	padding 1rem 0	
	clearfix()
	
.post_category
    font-size: 1rem;
    font-style: italic;
	
.post_date
	display inline-block
	
.blogpost_date
	display inline-block
	border-top 3px solid #999
	padding-top 1rem
	
.post_content
	font-size 1rem
	color #5E5E5E
	col(2.4/4, gutter: 0)
	shift(-0.4/4)
	text-align justify
	
.post_content_preview
	col(3/4, gutter: 0)
	text-align justify
	text-overflow ellipsis
	display -webkit-box
	-webkit-line-clamp 7
	-webkit-box-orient vertical
	overflow hidden
	
.post_title_h3
	padding 2rem 0rem	 

.footer
	border-top .2rem solid #fff
	padding 3rem 0
	color #B56464
	font-weight 900
	text-align center
	
h4
	margin 2rem 0		

.logo
	height 80px
	display inline-block
	max-width 20%
nav
	float right

li
	display inline-block
	
a
	color #B56464
	letter-spacing 1px
		
figure
	max-height 400px
	overflow hidden
	margin-bottom 2rem
	
.edit_delete_wrap
	col(.5/4, gutter: 0)
	shift(2.5/4)
	a
		float right
		padding 1rem 0
		border-bottom 1px solid #999
		&:hover
			border-bottom 1px solid #333
	
.about_box
	padding 4rem 0
	line-height 2rem

.cc_logo
	fill #B56464

.icon-twitter:before,
.icon-mail:before,
.icon-github-circled:before	
	font-family janus
	font-size 3rem
	color #4089BB
	content \e800
		


hr
	width 150px
	color #fff

.social_wrap
	margin-bottom 3rem	