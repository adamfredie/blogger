@import 'jeet'
@import 'nib'

mobile = 600px

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

// edit()
global-reset()
main_color = #F4F3F3
content_font = Helvetica, Arial, sans-serif
head_color = #B56464


body
  center(800px)
  background(main_color)
  font-family content_font
  +below(600px)
  	// background red

ul
	// font-family Helvetica, Arial, sans-serif

header
	padding 2rem 0
	margin-bottom 4rem

.global_head
	font 3rem Helvetica, sans-serif
	// padding 6rem 3rem
	text-align right
	display inline-block
	width 80%
	float right
	color #B56464

a
	text-decoration none
	
.post_title
	font-size 1.2rem
	letter-spacing .2rem
	transition .4s all
	color #B2ACAC
	// text-shadow 1px 1px 4px #5C5D5E
	&:hover
		color #353535
		// font-size 1.3rem
		letter-spacing .3rem

// New CSS for pages

.post_header
	color #353535
	letter-spacing .3rem
	font-size 2rem
	padding 4rem 0
	clearfix()
	
.post_head_wrap
	padding 1rem 0	
	
.post_category
	font-size 1rem
	font-style italic
	text-transform lowercase
	text-decoration underline
    
    
.post_content
	font-size 1rem
	padding-top 1.5rem
	color #5E5E5E
	
.post_title_container
	padding 3rem 0rem	 

.footer
	border-top .2rem solid #fff
	padding 3rem 0
	color #B56464
	font-weight 900
	
h4
	float right		

.logo
	height 80px
	display inline-block
	max-width 20%
nav
	float right

li
	display inline
	padding-left 2rem
	
li
	a
		color #B56464
		letter-spacing 1px
		
figure
	max-height 400px
	overflow hidden
	margin-bottom 2rem
	
.edit_delete_wrap 
	a
		float right
		padding-left 1rem
	// padding  1rem 0
	
.about_box
	padding 4rem 0
	line-height 2rem

.cc_logo
	fill #B56464