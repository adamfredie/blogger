extends ./layout.jade
block content
  h1 Edit
  form(action="/blog/#{blogs.id}", method="post")
    div
      label(for="title", placeholder="Title")
      input(type="text", placeholder="Title", name="title", value=blogs.title)
    div
      label(for="category", placeholder="Category")
      input(type="text", placeholder="Category", name="category", value=blogs.category)
    div
      label(for="content", placeholder="Content")
      textarea(placeholder="Category", name="content")= blogs.content
    div
      input(type="submit", value="Post")
